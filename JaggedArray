import java.util.Arrays;
public class JaggedArray {
    public static void main(String[] args) {
        //initialize 2D array; create method that takes on 2d array and returns a 1d array
        int[][] y = {
                {1, 2, 3},
                {4, 5},
                {6}
        };

        System.out.println(Arrays.toString(lengthArrays(y)));

        public int[] lengthArrays(int[][] arrayVar){
            int[] lengthRow = new int[arrayVar.length];
            for (int i = 0; i < arrayVar.length; i++) {
                lengthRow[i] = arrayVar[i].length;
                i++;
            }
           return int lengthRow;
        }
    }
}
